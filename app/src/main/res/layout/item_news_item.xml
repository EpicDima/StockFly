<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="ru.yandex.stockfly.model.NewsItem" />

        <variable
            name="newsItem"
            type="NewsItem" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@{position % 2 == 1 ? @color/white : @color/light}"
        app:cardCornerRadius="@dimen/company_border_radius"
        app:cardElevation="0dp"
        tools:cardBackgroundColor="@color/light">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_round_layout"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="@dimen/company_border_radius"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:contentDescription="@string/news_item_image"
                    app:imageUrl="@{newsItem.imageUrl}" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/headline"
                style="@style/Ticker"
                android:layout_width="0dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="14dp"
                android:maxLines="2"
                android:text="@{newsItem.headline}"
                app:layout_constraintStart_toEndOf="@+id/image_round_layout"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name"
                style="@style/CompanyName"
                android:layout_width="0dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="14dp"
                android:maxLines="5"
                android:text="@{newsItem.summary}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_round_layout"
                app:layout_constraintTop_toBottomOf="@+id/headline"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/source"
                style="@style/SingleLineTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="17dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@{newsItem.source}"
                android:textSize="@dimen/company_current_textsize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/headline"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
</layout>