<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.StockFly" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textSize">@dimen/main_tab_textsize</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_gravity">start</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabRippleColor">@null</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <style name="ViewPager" parent="WithoutOverScroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/progressbar_size</item>
        <item name="android:layout_height">@dimen/progressbar_size</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/black</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>

    <style name="DefaultButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_button_padding</item>
    </style>

    <style name="DateTimeButton" parent="DefaultButton">
        <item name="android:background">@drawable/button_datetime_background</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/datetime_button_textsize</item>
        <item name="android:padding">@dimen/date_button_padding</item>
    </style>

    <style name="BuyButton" parent="DefaultButton">
        <item name="android:background">@drawable/button_buy_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/buy_button_textsize</item>
    </style>

    <style name="WarningTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/warning_textsize</item>
        <item name="android:text">@string/error_receiving_data</item>
    </style>

    <style name="ErrorTextView" parent="WarningTextView">
        <item name="android:text">@string/error_receiving_data</item>
    </style>

    <style name="SearchTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/search_title_height</item>
        <item name="android:layout_marginStart">@dimen/search_title_margin_start</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/search_title_textsize</item>
    </style>

    <style name="WithoutOverScroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="VerticalList" parent="WithoutOverScroll">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalList" parent="WithoutOverScroll">
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/horizontal_list_side_padding</item>
        <item name="android:paddingEnd">@dimen/horizontal_list_side_padding</item>
    </style>

    <style name="SingleLineTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="Ticker" parent="SingleLineTextView">
        <item name="android:layout_height">@dimen/ticker_height</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/ticker_textsize</item>
    </style>

    <style name="CompanyName" parent="SingleLineTextView">
        <item name="android:layout_height">@dimen/company_name_height</item>
        <item name="android:textSize">@dimen/company_name_textsize</item>
    </style>

    <style name="CurrentPrice" parent="SingleLineTextView">
        <item name="android:layout_height">@dimen/current_height</item>
        <item name="android:textSize">@dimen/current_textsize</item>
    </style>

    <style name="SummaryField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SummaryFieldTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SummaryFieldValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>